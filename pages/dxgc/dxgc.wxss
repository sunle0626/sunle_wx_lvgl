/* dxgc.wxss */
.header_swiper{
    width: 750rpx;
   height: 400rpx;
  }
.dxgc_top{
    width: 100%;
    height: 500rpx;
}
.dxgc_tit{
    width: 100%;
    height: 50rpx;
    font-size: 38rpx;
    line-height: 50rpx;
    margin: 25rpx 0;
    text-align: center;
    font-weight: 700;
}
.dxgc_top image{
    width: 750rpx;
    height: 400rpx;
}
.dxgc_content{
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}
.dxgc_box{
    margin-top: 15rpx;
    padding-bottom: 15rpx;
    width: 100%;
}
.dxgc_contont_tit{
    text-align: center;
    width: 100%;
    font-size: 34rpx;
    height: 80rpx;
    line-height: 80rpx;
    /* text-indent: 1em; */
    border-left: 2rpx solid #369;
    border-right: 2rpx solid #369;
    border-bottom: 3rpx solid #369;
}
.dxgc_txt{
    margin-top: 15rpx;
}
.dxgc_txt .dxgc_content_txt{
    width: 100%;
    font-size: 28rpx;
    line-height: 50rpx;
    border-bottom: 1rpx solid #ccc;
    padding: 15rpx 0;
}
.dxgc_bottom{
    width: 100%;
    text-align: center;
    border-top: 20rpx solid #eee;
    border-bottom: 20rpx solid #eee;
}
.content_nav{
    width: 100%;
}
.list_content_nav{
    padding-top: 30rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.content_nav_list{
    box-sizing: border-box;
    text-align: center;
    line-height: 120rpx;
    font-size: 24rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 3rpx solid #865;
}
.lx_tit{
    width: 100%;
    font-size: 32rpx;
    padding: 10rpx 0;
}
.lx_img image{
    width: 400rpx;
    height: 400rpx;
}
.lx_txt{
font-size: 32rpx;
padding: 5rpx 0;
}